//SERVLET

package servlets;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import org.apache.log4j.Logger;

public class servass36 extends HttpServlet {
	private static final long serialVersionUID = 1L;
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	Logger log =Logger.getLogger(servass36.class);
	
	HttpSession session = request.getSession();
	
    String usernm =(String) session.getAttribute("usernm");
    
    String passwd =(String) session.getAttribute("passwd");
 
    if(usernm.contentEquals("abcd") & passwd.contentEquals("abd123"))
    {
        log.warn("Logged in");
	}
    else
    {
    	log.info("ERROR OCCURED");
    }
}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}


//log4j.properties

log4j.rootLogger=DEBUG,myout

log4j.appender.myout=org.apache.log4j.ConsoleAppender

log4j.appender.myout.Target=System.out

log4j.appender.myout.layout=org.apache.log4j.PatternLayout

log4j.appender.myout.layout.ConversionPattern=%d{hh:mm:ss} [ %m ] 

