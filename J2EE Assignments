Q.25 Make a servlet which is called first as a Home page on running the project and this servlet is creating a form where Name, City(selection box) and Radio button
     and display the complete information in a JSP Page in tabular form.

=>

//form.jsp

package package1;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


public class ass_25 extends HttpServlet {
	private static final long serialVersionUID = 1L;
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	PrintWriter pw = response.getWriter();
	response.setContentType("text/html");
	pw.print("<center>");
    pw.print("<h1>HOMEPAGE<h1>");
    pw.print("</center>");
    
    pw.print("<form action=ass25.jsp method=get>");
    pw.print("<center>");
    pw.print("<table border=2");
    pw.print("<tr><td>NAME : </td><td><input type=text name=nm></td></tr>");
    pw.print("<tr><td>CITY</td><td>");
    pw.print("<select name=cy>");
    pw.print("<option value=PUNE>PUNE</option>");
    pw.print("<option value=MUMBAI>MUMBAI</option>");
    pw.print("<option value=SOLAPUR>SOLAPUR</option>");
    pw.print("<option value=KOLAPUR>KOLAPUR</option>");
    pw.print("<option value=SATARA>SATARA</option>");
    pw.print("</select></td><tr>");
    pw.print("<tr><td>GENDER</td><td>MALE<input type=radio name=gn value=Male>FEMALE<input type=radio name=gn value=Female></td></tr>");
	pw.print("<tr><td><input type=submit value=ENTER></td></tr>");
	pw.print("</table>");
	pw.print("</center>");
	pw.print("</form>");
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}

//jsp-2

