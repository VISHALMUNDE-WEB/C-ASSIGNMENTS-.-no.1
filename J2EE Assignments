Q.33 Create two servlets and Run the first Servlet file and set the employee object as an attribute in the first servlet and display the values of employee object
       in the second servlet. 

=>

//SERVLET - 1

package package1;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class ass_33 extends HttpServlet {
	private static final long serialVersionUID = 1L;
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	employee em = new employee("ABHISHEK","PUNE",18,101);
	
	request.setAttribute("emp", em);
	
	RequestDispatcher rs = request.getRequestDispatcher("servass33");
	rs.forward(request,response);
	
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}

//EMPLOYEE
package package1;

public class employee {
    String name,city;
    int age,eid;
    
    public employee(String name,String city,int age,int eid)
    {
    	this.name=name;
    	this.city=city;
    	this.age=age;
    	this.eid=eid;
    }
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getCity() {
		return city;
	}
	public void setCity(String city) {
		this.city = city;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public int getEid() {
		return eid;
	}
	public void setEid(int eid) {
		this.eid = eid;
	}
}


//SERVLET - 2

package package1;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class servass33 extends HttpServlet {
	private static final long serialVersionUID = 1L;
     
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	PrintWriter pw = response.getWriter();
		
	employee e1 = (employee)request.getAttribute("emp");
	
	pw.print("NAME : "+e1.name+"<br>");
	
	pw.print("CITY : "+e1.city+"<br>");
	
	pw.print("AGE : "+e1.age+"<br>");
	
	pw.print("EID : "+e1.eid+"<br>");
	
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}



Q.34 Create a JSP Web page which have the fields name, email,city  and a submit button. Send data from this JSP page to the servlet .In this servlet you have to create
     a Logger .Log messages will be shown if the name ,and email is empty.If not empty then print all the details on the first JSP page.
  
=>

//form.jsp
<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>

<form action="ass_serv34" method="get">
ENTER NAME : <input type="text" name="nm">
ENTER EMAIL : <input type="text" name="em">
ENTER CITY : <input type="text" name="ct">
<input type="submit" value="Enter">
</form>

</body>
</html>   

//SERVLET

package servlets;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.Cookie;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.apache.log4j.Logger;

public class ass_serv34 extends HttpServlet {
	private static final long serialVersionUID = 1L;

	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	Logger log = Logger.getLogger(demo34.class);
	
	PrintWriter pw = response.getWriter();
	
	String nam = request.getParameter("nm");
	
	String ema = request.getParameter("em");
	
	String city = request.getParameter("ct");
	
    if(nam=="")
    {
	   log.warn("NAME CANNOT BE EMPTY");
	}
    
    if(ema=="")
    {
    	log.fatal("EMAIL CANNOT BE KEPT EMPTY");
    }
    
    Cookie ck1 = new Cookie("name",nam);
    response.addCookie(ck1);
    
    Cookie ck2 = new Cookie("email", ema);
    response.addCookie(ck2);
    
    Cookie ck3 = new Cookie("city", city);
    response.addCookie(ck3);
    
    pw.print("<form action=jsp34.jsp method=get>");
    pw.print("<input type=submit value=GO>");
    
}  
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}

//Class

package servlets;

public class demo34 {

	public static void main(String[] args) {

	}

}


//JSP

<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<%

Cookie co[] = request.getCookies();

for(Cookie c : co)
{
	out.print("NAME : "+c.getName()+"<br>");
	out.print("VALUE : "+c.getValue()+"<br>");
}

%>
</body>
</html>

