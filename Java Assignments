Q.2 Write a program to Define employee Company as static and display the details of employee like eid,ename,salary with company name for 5 employees.

ANS. package Assignments.Java;

 class Assignment2 {
	
	private int eid;
	private String name;
	private int salary;
	private String company;
	
	void setdata(int eid, String name, int salary, String company)
	{
		this.eid=eid;
		this.name=name;
		this.salary=salary;
		this.company=company;
	}
	
	void showdata()
	{
		System.out.println("eid : "+eid);
		System.out.println("name : "+name);
		System.out.println("salary : "+salary);
		System.out.println("company : "+company);
	}
	
 }

     class myclass
    {

	public static void main(String[] args) {
		
       Assignment2 v1=new Assignment2();
       Assignment2 v2=new Assignment2();
       Assignment2 v3=new Assignment2();
       Assignment2 v4=new Assignment2();
       Assignment2 v5=new Assignment2();
       
       v1.setdata(111, "VISHAL", 90000, "DIGIT");
       System.out.println("=============");
       
       v2.setdata(222, "NILESH", 80000, "DIGIT");
       System.out.println("=============");
       
       v3.setdata(333, "NIMESH", 70000, "DIGIT");
       System.out.println("=============");
       
       v4.setdata(444, "HEMANT", 60000, "DIGIT");
       System.out.println("=============");
       
       v5.setdata(555, "ABHISHEK",50000, "DIGIT");
       System.out.println("=============");
       
       v1.showdata();
       v2.showdata();
       v3.showdata();
       v4.showdata();
       v5.showdata();
	}

}
