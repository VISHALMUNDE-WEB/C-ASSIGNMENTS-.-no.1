String con = (String)session.getAttribute("contact");

long icon = Long.parseLong(con);

if(usernm.length()!=0)
{

try{
		Class.forName("oracle.jdbc.driver.OracleDriver");
		
		Connection sn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root");
		
		PreparedStatement smt = sn.prepareStatement("insert into emp800 values(?,?)");
			
		smt.setString(1,usernm);
		
		smt.setLong(2,icon);
		
		int i = smt.executeUpdate();
		
		out.print("RECORD SUCCESSFULLY INSERTED.....");
		
		smt.close();
		
		sn.commit();
		
		sn.close();
	}
	catch(Exception ea)
	{
		ea.printStackTrace();
	}
}
else 
{
	out.print("NEITHER OF THEM CAN BE NULL");
}

%>
</body>
</html>
