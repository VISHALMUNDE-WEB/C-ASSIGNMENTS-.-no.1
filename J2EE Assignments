Q.14 Make a table stores records customers cid (primary key),cname, city,contact. create a webpage customers.html which is accepting the data from the text boxes.
     Make a filter which is applied on a servlet and checks the contactno. If contactno for any customer is same then record in the database table should not be added and
     a webpage failure.html will be displayed with message "Contact no can not be same" ,If contactno is different then display a Page named as Success.html shows 
     a message "Record Added successfully".

=

//HTML

<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>

<form action="servass_14" method="post">
CUSTOMER ID <input type="text" name="cid"><br>
CUSTOMR NAME <input type="text" name="cname"><br>
CITY<input type="text" name="cy"><br>
CUSTOMER CONATCTNO<input type="text" name="contact"><br>
<input type="submit" value="Enter"><input type="reset" value="reset">
</form>

</body>
</html> 

//FILTER

package package1;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.Statement;

import javax.servlet.Filter;
import javax.servlet.FilterChain;
import javax.servlet.FilterConfig;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.ServletRequest;
import javax.servlet.ServletResponse;

/**
 * Servlet Filter implementation class fill14
 */
public class fill14 implements Filter {

    /**
     * Default constructor. 
     */
    public fill14() {
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see Filter#destroy()
	 */
	public void destroy() {
		// TODO Auto-generated method stub
	}

	public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain) throws IOException, ServletException {
		response.setContentType("text/html");
		PrintWriter out=response.getWriter();
		
		long con=Long.parseLong(request.getParameter("contact"));
		
		try {
			
           Class.forName("oracle.jdbc.driver.OracleDriver");  
			 
			 Connection cn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root"); 
		
			 Statement smt =  cn.createStatement();  
			 
			 String query="select * from ass14";
			
			 ResultSet rs = smt.executeQuery(query); 

			 int temp=0;
			 while(rs.next())
			 {
				 if(rs.getLong(4)==con)
					 {
					    temp++;
					 }	
			  }
			 
			 if (temp>0)
			 {
				 out.print(temp);
			    RequestDispatcher rd=request.getRequestDispatcher("error.html");
			    rd.forward(request, response);
			 }
			 else
			 {
				 out.print(temp);
			     chain.doFilter(request, response); 
			 }
		}
			 catch(Exception ea)
			 {
				 ea.printStackTrace();
			 }
	}

	public void init(FilterConfig fConfig) throws ServletException {
		// TODO Auto-generated method stub
	}

}

//SERVLET

package package1;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class servass_14 extends HttpServlet {
	private static final long serialVersionUID = 1L;
   
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		response.setContentType("text/html");
		PrintWriter out=response.getWriter();
		try {
			int id=Integer.parseInt(request.getParameter("cid"));
			String name=request.getParameter("cname");
			String cy=request.getParameter("city");
			long conn=Long.parseLong(request.getParameter("contact"));
			
			Class.forName("oracle.jdbc.driver.OracleDriver");
			Connection con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root"); 
			
			 PreparedStatement psmt=con.prepareStatement("insert into ass14 values(?,?,?,?)");
			 psmt.setInt(1, id);
			 psmt.setString(2, name);
			 psmt.setString(3, cy);
			 psmt.setLong(4, conn);
			 psmt.executeUpdate();
			 con.commit();
			 con.close(); 
			 out.print("<h1>Record Save!!</h1>");
		}
		catch(Exception ea)
		{
			ea.printStackTrace();
		}
	}	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}

