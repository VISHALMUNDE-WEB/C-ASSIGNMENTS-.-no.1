Q.38 Create a maven project which is a simple project in which take user input in a method of a class for which a Logger is created and a log file is maintained on the
     disk when all user details have been taken by user.

=>

//CLASS

package classes;

import java.util.Scanner;

import org.apache.log4j.Logger;

public class ass_38 {
	public static String name,city;
    public static int id;
    
    public void method()
    {
    	Logger log = Logger.getLogger(ass_38.class);
    	    	
    	Scanner sc = new Scanner(System.in);
    	System.out.println("ENTER NAME : ");
    	name = sc.nextLine();
    	
    	if(name=="")
    	{
    		name=null;
    	}
    	
    	if(name.length()==0)
    	{
    		log.fatal("NAME CANNOT BE EMPTY");
    	}
    	else
    	{
    		System.out.println("NAME : "+name);
    	}
    	
    	System.out.println("ENTER ID : ");
    	id = sc.nextInt();
    	System.out.println("ID : "+id);
    	
    	sc.nextLine();
    	
    	System.out.println("ENTER CITY : ");
    	city = sc.nextLine();
    	
    	if(city=="")
    	{
    		name=null;
    	}
    	
    	if(city.length()==0)
    	{
    		log.fatal("CITY NAME CANNOT BE EMPTY");
    	}
    	else
    	{
    		System.out.println("CITY : "+city);
    	}
    	
      }
   
	public static void main(String[] args) {
    ass_38 as = new ass_38();

    as.method();
    
	}
}


//log4j

log4j.rootLogger=DEBUG,myout

log4j.appender.myout=org.apache.log4j.ConsoleAppender

log4j.appender.myout.target=System.out

log4j.appender.myout.layout=org.apache.log4j.SimpleLayout

log4j.appender.myout.ConversionPattern=%m

