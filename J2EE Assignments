<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<%

String name = (String)session.getAttribute("name");

Object amount = session.getAttribute("amt");
String am = String.valueOf(amount);
int amt = Integer.parseInt(am);

Object rate = session.getAttribute("rate");
String srt = String.valueOf(rate);
double sr = Double.valueOf(srt);

out.print("CUSTOMER NAME : "+name+"<br>");
out.print("RATE OF INTEREST : "+sr+"<br>");
out.print("AMOUNT : "+amt+"<br>");

%>
</body>
