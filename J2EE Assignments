Q.15 Create a Listener Class which creates a table for a dynamic project and this table has 3 columns sno, city,temperature. Make a servlet which inserts the records for
     5 cities in the table.
   
=

//LISTENER 

package demo.ninth;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletContext;
import javax.servlet.ServletContextEvent;
import javax.servlet.ServletContextListener;

public class ass_lis_15 implements ServletContextListener {

	public void contextInitialized(ServletContextEvent sce)  { 
		
		try {
			Class.forName("oracle.jdbc.driver.OracleDriver");
			
		    Connection cn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root");
			
            ServletContext sc = sce.getServletContext();
            
            sc.setAttribute("mycon", cn);	
            
            Statement smt = cn.createStatement();
            
            String query = "create table emp700(sno number(20),city varchar2(20),temperature number(10))";
		
		    int i = smt.executeUpdate(query);
		    
		    System.out.println("TABLE CREATED SUCCESSFULLY......");
		    
		    smt.close();
		    
		    cn.commit();
		    
		    cn.close();
		}
		catch(Exception ea)
		{
			ea.printStackTrace();
		}
   }
    
    public void contextDestroyed(ServletContextEvent sce)  { 
    }
}


//form.jsp

<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<form action="ass_15" method="get">
ENTER sno : <input type="text" name="sno">
ENTER city : <input type="text" name="city">
ENTER temperature : <input type="text" name="temp">
<input type="submit" value="enter">
</form>
</body>
</html>

//Servlet

package demo.ninth;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;

import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class ass_15
 */
public class ass_15 extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public ass_15() {
    	
        super();
    }
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
    PrintWriter pr = response.getWriter();
    
    int sno = Integer.parseInt(request.getParameter("sno"));
    
    String cy = request.getParameter("city");
    
    double temp = Double.parseDouble(request.getParameter("temp"));
    
    try {
	   Class.forName("oracle.jdbc.driver.OracleDriver");
		
	   ServletContext sc = getServletContext();
		
	   Connection cn = (Connection) sc.getAttribute("mycon");
        
        Statement smt = cn.createStatement();
        
        String query = "insert into emp700 values('"+sno+"','"+cy+"','"+temp+"')";
	
	    int i = smt.executeUpdate(query);
	    
	    pr.print("INSERTED RECORDS SUCCESSFULLY......");
	    
	    smt.close();
	    
	    cn.commit();
	    
	    cn.close();
	}
	catch(Exception ea)
	{
		ea.printStackTrace();
	}
}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}

