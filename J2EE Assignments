//servlet - 1

package package1;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import in.co.pack1.cust;
import in.co.pack1.custDAO;


public class servass_40 extends HttpServlet {
	private static final long serialVersionUID = 1L;
     
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		PrintWriter pw = response.getWriter();
		
		String email = request.getParameter("em");
		
		String passwd = request.getParameter("pas");
		
		custDAO cus = new custDAO();
		
		int y = cus.method(new cust(), email, passwd);
		
		RequestDispatcher rs = request.getRequestDispatcher("serv_40");
		rs.include(request, response);
		
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}

//DAO CLASS

package in.co.pack1;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;

public class custDAO {
	
	public custDAO()
	{
		
	}
	public int method(cust c1,String em,String pass)
	{
		c1.setEmailid(em);
		c1.setPasswd(pass);
		
		int i = 0;
		try {
			
			Class.forName("oracle.jdbc.driver.OracleDriver");
			
			Connection cn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root");
					
		    PreparedStatement pr = cn.prepareStatement("insert into cusdet values('"+c1.getEmailid()+"','"+c1.getPasswd()+"')");
		    
		    i = pr.executeUpdate();
		    
		    System.out.println("RECORD INSERTED SUCCESSFULLY ......");
		}
		catch(Exception ea)
		{
			ea.printStackTrace();
			
		}
		return i;
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}

//DTO CLASS

package in.co.pack1;

public class cust {
    String emailid,passwd;
    
    public String getEmailid() {
		return emailid;
	}
	public void setEmailid(String emailid) {
		this.emailid = emailid;
	}
	public String getPasswd() {
		return passwd;
	}
	public void setPasswd(String passwd) {
		this.passwd = passwd;
	}
	public cust()
    {
    	
    }
	

}

//serv_40.java

package package1;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;


public class serv_40 extends HttpServlet {
	private static final long serialVersionUID = 1L;
   
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		 response.setContentType("text/html");
			PrintWriter pw = response.getWriter();
			try {
				
				Class.forName("oracle.jdbc.driver.OracleDriver");
				
				Connection cn = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","system","root");
						
			    PreparedStatement pr = cn.prepareStatement("select * from cusdet");
			    
			    ResultSet r = pr.executeQuery();
			    
			    while(r.next())
			    {
			    	pw.print("EMAIL : "+r.getString(1)+"<br>");
			    }
			}
			catch(Exception ea)
			{
				ea.printStackTrace();
				
			}
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
