Q.43 Make a Servlet which creates a Form where Username and Password is to be taken and submitted to second servlet .
      Create a filter which checks the username is "XYZ" and Password is "1234" .If it is valid then a session is created on the second servlet for the username.
      In second servlet create a submit button which sends the information to third servlet which displays the Username. 

=>

//SERVLET - 1

package package1;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class servass_43_a extends HttpServlet {
	private static final long serialVersionUID = 1L;
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		 PrintWriter pw = response.getWriter();
		    response.setContentType("text/html");
		    pw.print("<form action=ser_43 method=get>");
		    pw.print("ENTER USERNAME : <input type=text name=us>");
		    pw.print("ENTER PASSWORD : <input type=text name=pa>");
		    pw.print("<input type=submit value=Enter>");
		    pw.print("</form>");
		    		    
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
   
	doGet(request, response);
	}

}
//FILTER 

package package1;

import java.io.IOException;
import javax.servlet.Filter;
import javax.servlet.FilterChain;
import javax.servlet.FilterConfig;
import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.ServletRequest;
import javax.servlet.ServletResponse;
import javax.servlet.http.HttpSession;

import org.apache.catalina.Session;


public class fill43 implements Filter {
 
	public fill43() {
    }
	public void destroy() {
	}
	public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain) throws IOException, ServletException {
	
	String user = request.getParameter("us");
	
    String pass = request.getParameter("pa");
      		
    if(user.contentEquals("XYZ") & pass.contentEquals("1234"))
    {
        chain.doFilter(request, response);
    }
    else
    {
	    response.getWriter().print("INVALID USERNAME OR PASSWORD");
    	RequestDispatcher rs = request.getRequestDispatcher("servass_43_a");
    	rs.include(request, response);
    	
    }
}

	public void init(FilterConfig fConfig) throws ServletException {
	}

}


//SERVLET - 2

package package1;

import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

public class ser_43 extends HttpServlet {
	private static final long serialVersionUID = 1L;
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	PrintWriter pw = response.getWriter();
		
	String user = request.getParameter("us");
		
    String pass = request.getParameter("pa");
	    
    HttpSession session = request.getSession();
    
    session.setAttribute("usernm", user);
    
    pw.print("<form action=servass_43_b>");
    pw.print("<input type=submit value=Enter>");
    pw.print("</form>");
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}


//SERVLET - 3

package package1;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

public class servass_43_b extends HttpServlet {
	private static final long serialVersionUID = 1L;
    
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	HttpSession session = request.getSession();
		
	String user =(String) session.getAttribute("usernm");
	
	response.getWriter().print("WELCOME "+user);
	
	}
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
