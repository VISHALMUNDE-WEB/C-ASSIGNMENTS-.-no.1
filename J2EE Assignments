Q.12 Create a web page Form.html which accepts the user details like Username and password. If the length of password is less than 8 characters then send the response on
     the web page as error.html which displays message "Password should not be less than 8 characters" ,If password is valid the send the response to valid.html using 
     sendRedirect() method.

=
//HTML-1

<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<form action="assign12" method="get">
ENTER USERNAME : <input type="text" name="usernm">
ENTER PASSWORD : <input type="text" name="passwd">
<input type="submit"> 
</form>
</body>
</html>

//SERVLET

package demo.four;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class assign12
 */
public class assign12 extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public assign12() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        String usernm = request.getParameter("usernm");
		
		String passwd = request.getParameter("passwd");
		
        if(usernm.length()!=0)
        {
        	if(passwd.length() <= 8)
          {
        	response.sendRedirect("error.html");
          }
            else
          {
        	response.sendRedirect("valid.html");
          }
        }
        else
        {
        	response.getWriter().print("USERNAME SHOULD NOT BE EMPTY");
        }

	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}

//HTML-2

<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<h3>PASSWORD CANNOT BE LESS THAN 8</h3>
</body>
</html>

//HTML-3

<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<h3>PASSWORD IS VALID</h3>
</body>
</html>

